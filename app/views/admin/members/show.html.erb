<main>
<h2><%= @member.last_name %><%= @member.first_name %>さんの会員詳細</h2>
  <table>
    <tbody>
      <tr>
        <th>会員ID</th><td><%= @member.id%></td>
      </tr>
      <tr>
        <th>フリガナ</th><td><%= @member.last_name_kana %><%= @member.first_name_kana%></td>
      </tr>
      <tr>
        <th>郵便番号</th><td><%= @member.post_number %></td>
      </tr>
       <tr>
        <th>電話番号</th><td><%= @member.phone_number %></td>
      </tr>
       <tr>
        <th>メールアドレス</th><td><%= @member.email %></td>
      </tr>
       <tr>
        <th>会員ステータス</th>
          <% if is_deleted == false %>
          <td>退会</td>
          <% else %>
          <td>有効</td>
          <% end %>
        <% end %>
      </tr>
    </tbody>
  </table>

  <div>
    <%= link_to '編集する',edit_admin_member_path(@member) %>
    <%= link_to '注文履歴一覧を見る'admin_root_path %>
  </div>

</main>
