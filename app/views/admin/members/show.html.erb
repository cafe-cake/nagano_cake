<main>
  <div class="container px-sm-0">
    <div class="row pt-4 mb-2">
       <h4>
         <%= @member.last_name %><%= @member.first_name %>さんの会員詳細
        </h4>
     </div>
    <div class="row">
      <div class="col-md-9">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>会員ID</td><td><%= @member.id %></td>
              </tr>
              <tr>
                <td>氏名</td><td><%= @member.last_name %><%= @member.first_name %></td>
              </tr>
              <tr>
                <td>フリガナ</td><td><%= @member.last_name_kana %><%= @member.first_name_kana %></td>
              </tr>
              <tr>
                <td>郵便番号</td><td><%= @member.post_number %></td>
              </tr>
              <tr>
                <td>住所</td><td><%= @member.address %></td>
              </tr>
               <tr>
                <td>電話番号</td><td><%= @member.phone_number %></td>
              </tr>
               <tr>
                <td>メールアドレス</td><td><%= @member.email %></td>
              </tr>
               <tr>
                <td>会員ステータス</td>
                  <% if @member.is_deleted == false %>
                    <td class="font-weight-bold text-success">
                    <%= @member.is_deleted ? '退会':'有効' %>
                    </td>
                  <% else %>
                    <td class="font-weight-bold text-secondary">
                    <%= @member.is_deleted ? '退会':'有効' %>
                    </td>
                  <% end %>
              </tr>
            </tbody>
          </table>
     </div>
    </div>

  <div class="row pb-4">
    <div class="col-md-2 offset-2">
      <%= link_to '編集する',edit_admin_member_path(@member), class: "btn btn-success text-light" %>
    </div>
    <div class="col-md-8">
      <%= link_to '注文履歴一覧を見る',admin_root_path, class: 'btn btn-primary text-light' %>
    </div>

  </div>

 </div>
</main>
