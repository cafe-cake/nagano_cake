<main>
  <div class="container">
    <div class="row mt-4 mb-2">
      <h4 class="offset-md-1 bg-light">会員一覧</h4>
     </div>

     <div class="row">
      <table class="table col-md-9 mx-auto">
        <thead class="table-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @members.each do |member| %>
          <tr>
            <td><%= member.id %></td>
            <td>
              <%= link_to admin_member_path(member) do %>
              <%= member.last_name%><%= member.first_name %>
              <% end %>
              </td>
            <td><%= member.email %></td>
            <% if member.is_deleted == false %>
              <td class="font-weight-bold text-success">
                <%= member.is_deleted ? '退会':'有効' %>
              </td>
            <% else %>
              <td class="font-weight-bold text-secondary">
                <%= member.is_deleted ? '退会':'有効' %>
              </td>
            <% end %>

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="row">
      <div class="col-md-3 mx-auto">
        <%= paginate @members %>
      </div>
    </div>
 </div>
</main>