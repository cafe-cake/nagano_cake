<main>
  <div class="container">
    <div class="row mt-4 mb-2">
      <h4 class="bg-light">会員一覧</h4>
     </div>

     <div class="row">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>

          <% @members.each do |member| %>
          <tr>
            <td><%= member.id %></td>
            <td>
              <%= link_to admin_member_path(member) do %>
              <%= member.last_name%><%= member.first_name %>
              <% end %>
              </td>
            <td><%= member.email %></td>
            <td><%= member.is_deleted %></td>
          </tr>
          <% end %>
          </thead>
      </table>
      <%= paginate @members %>
    </div>
 </div>
</main>