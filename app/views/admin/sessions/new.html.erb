<div id="alert"><%= flash[:alert] %></div>
<div class="container">
  <div class="row-justify-content-center">
    <div class="col-3  ml-5 pt-4 text-center bg-light">
      <h5><strong>管理者</strong>ログイン</h5>
    </div>
  </div>
  <%= form_with model:@admin, url: admin_session_path,local: true do |f| %>

    <div class="form-group row mt-4 mb-3">
      <%= f.label :email, class:"col-sm-4 mr-3 col-form-label text-right" %>
      <%= f.email_field :email, class:"col-sm-5" %>
    </div>

    <div class="form-group row mt-4 mb-3">
      <%= f.label :password, class:"col-sm-4 mr-3 col-form-label text-right" %>
      <%= f.password_field :password, class:"col-sm-5" %>
    </div>
    <div class="form-group row mt-4 pt-2 pb-4 mb-0">
      <div class="col-sm-4 mr-3"></div>
        <%= f.submit "ログイン",class:"btn btn-primary col-sm-2" %>
    </div>
  <% end %>
</div>
