<div class="container">
  <div class="row p-4">
    <div class="bg-light"><h4>ジャンル一覧・追加</h4></div>
  </div>
  <div class="row"></div>
      <%= form_with model: @genre, url:admin_genres_path do |f| %>
        <div class="p-4 form-group">
          <table class="col-5">
            <td><%= f.label :ジャンル名 %></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit "新規登録", class: "btn btn-success"%></td>
          </table>
        </div>
      <% end %>
  </div>

  <div class="row offset-1 col-5">
    <table class="table">
      <thead class="table-active">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


