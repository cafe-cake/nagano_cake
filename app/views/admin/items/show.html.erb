<div class="contents-title text-center">
  <div class="row align-items-center">
    <div class="col-md-4 ml-5">
      <div class="mb-5 ml-5">
        <h3>商品詳細</h3>
      </div>
    </div>
  </div>

  <div class="row align-items-center">
    <div class="col-md-5 text-right">
        <%= attachment_image_tag @item, :image, size: "500x400", fallback: "no_image.jpg"%>
    </div>
    <div class="col-md-7">
      <div class="text-left">
        <table class="table table-borderless d-flex">
          <tr>
            <td class="font-weight-bold ">商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">
              税込価格
              (税抜価格)
            </td>
            <td>
              <%= ((@item.price.to_i * 1.1).round).to_s(:delimited) %>(<%= (@item.price).to_s(:delimited) %>)円
            </td>
          </tr>
          <tr>
            <td class="font-weight-bold">販売ステータス</td>
            <td class="h6 font-weight-bold">
              <% case @item.sales_status when "販売中" %>
              <span style="color: green;"><%= @item.sales_status %></span>
              <% when "販売中止" %>
              <span style="color: dimgray;"><%= @item.sales_status %></span>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
      <div class="text-center w-25">
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary p-2" %>
      </div>
    </div>
  </div>
</div>