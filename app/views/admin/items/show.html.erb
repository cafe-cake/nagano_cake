<h3>商品詳細</h3>

<div class="item_image">
  <%= attachment_image_tag @item, :image, size: "300x300", fallback: "no_image.jpg"%>
</div>
<div class="item_body">
  <table>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>
        税込価格
        (税抜価格)
      </td>
      <td>
        <%= @item.price * 1.1 %>(<%= @item.price %>)円
      </td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td>
        <% case @item.sales_status when "販売中" %>
        <span style="background: green;"><%= item.sales_status %></span>
        <% when "販売中止" %>
        <span style="background: dimgray;"><%= item.sales_status %></span>
        <% end %>
      </td>
    </tr>
  </table>
</div>
<div class="btn">
    <%= link_to "編集する", edit_admin_item_path(@item) %>
</div>