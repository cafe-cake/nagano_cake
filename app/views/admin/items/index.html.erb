<div class="contents-title text-center m-4">
  <div class="row justify-content-center">
    <div class="col-md-3 text-left mb-4 mr-5 text-center bg-light">
      <h3><strong>商品一覧</strong></h3>
    </div>
    <div class="col-md-4 text-right text-secondary ">
       <%= link_to "ジャンル登録", admin_genres_path, class: "mr-5 btn btn-info" %>
      <%= link_to "商品追加", new_admin_item_path, class: "mr-5 btn btn-success" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8 text-left">
      <table class="table table-hover" >
        <tr class="table-active">
            <th class="col-1">商品名ID</th>
            <th class="col-2">商品名</th>
            <th class="col-1">税抜価格</th>
            <th class="col-2">ジャンル</th>
            <th class="col-2">ステータス</th>
          </tr>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td class="col-1 align-middle">
                  <%= item.id %>
                </td>
                <td class="col-2 align-middle">
                  <%= link_to admin_item_path(item.id), class: "text-secondary" do %>
                    <%= item.name %>
                  <% end %>
                </td>
                <td class="col-1 align-middle">
                  <%= item.price %>
                </td>
                <td class="col-2 align-middle">
                  <%= item.genre.name %>
                  </td>
                <td class="col-2 align-middle h6 font-weight-bold">
                  <% case item.sales_status when "販売中" %>
                  <span style="color: green;"><%= item.sales_status %></span>
                  <% when "販売中止" %>
                  <span style="color: dimgray;"><%= item.sales_status %></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-8">
      <%= paginate @items %>
    </div>
  </div>
</div>