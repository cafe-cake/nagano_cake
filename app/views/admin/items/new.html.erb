<div class="contents-title text-center">
  <div class="row">
    <div class="col-md-12">
      <!--エラーメッセージここから<<<-->
      <% if @item.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-primary" role="alert">
              <%= @item.errors.count %>箇所の内容が入力されていません
              <ul>
              <% @item.errors.full_messages.each do |message| %>
                <dd><%= message %></dd>
              <% end %>
              </ul>
          </div>
        </div>
      <% end %>
      <!--ここまで>>>-->
    </div>
    <div class="row align-items-center">
        <div class="col-md-12">
        <h3>商品新規登録</h3>
        <%= form_with(model:[@item], url:admin_items_path, local:true) do |f| %>
          <div class="item-form">
            <%= f.label :image %>
            <%= f.attachment_field :image %>
          </div>
          <div class="item-form">
            <%= f.label :name %>
            <%= f.text_field :name, placeholder: "商品名" %>
          </div>
            <div class="item-form">
            <%= f.label :introduction %>
            <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
          </div>
            <div class="item-form">
            <%= f.label :genre_id %>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
          </div>
            <div class="item-form">
            <%= f.label :price %>
            <%= f.number_field :price, placeholder: "1000" %>円
          </div>
          <div class="item-form">
            <%= f.label :sales_status %>
            <%= f.radio_button :sales_status, :"販売中" %>
            <%= f.label :sales_status, "販売中", checked: true %>
            <%= f.radio_button :sales_status, :"販売中止" %>
            <%= f.label :sales_status, "販売中止" %>
          </div>
          <div class="item-form">
            <%= f.submit '新規登録', class: "btn btn-primary" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
</div>
