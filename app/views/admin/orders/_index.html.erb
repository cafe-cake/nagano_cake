<div class="row mt-4 mb-2">
  <h4 class="offset-md-1 bg-light">注文履歴一覧</h4>
</div>

<div class="row">
  <table class="table col-md-9 mx-auto">
    <thead>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </thead>

    <tbody>
      <% orders.each do |order| %>
        <tr>

          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
          <td><%= order.member.last_name %> <%= order.member.first_name %></td>
          <td><%= order.item_orders.sum(:count) %></td>
          <td><%= order.order_status_i18n %></td>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate orders %>