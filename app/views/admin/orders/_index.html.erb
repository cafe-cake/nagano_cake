<div class="container">
  <div class="row p-5">
    <h4 class="bg-light">注文履歴一覧</h4>
  </div>

  <div class="row">
    <table class="table col-10 mx-auto">
      <thead class="bg-light">
        <th class="col-3">購入日時</th>
        <th class="col-2">購入者</th>
        <th class="col-3">注文個数</th>
        <th class="col-3">注文ステータス</th>
      </thead>

      <tbody>
        <% orders.reverse_each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
            <td><%= order.member.last_name %> <%= order.member.first_name %></td>
            <td><%= order.item_orders.sum(:count) %></td>
            <td><%= order.order_status_i18n %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= paginate orders %>