<div class="conteiner">
  <div class="row">
    <div class="col-6 text-center">
        マイページ
    </div>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-6">
      <strong>登録情報</strong>
      <%= link_to edit_member_path(@member), class: 'btn btn-sm btn-success' do %>
        <span>編集する</span>
      <% end %>
      <table class="table-bordered justify-content-between">
        <tbody>
          <tr>
            <th>会員ID</th><td><%= @member.id%></td>
          </tr>
          <tr>
            <th>フリガナ</th><td><%= @member.last_name_kana %><%= @member.first_name_kana%></td>
          </tr>
          <tr>
            <th>郵便番号</th><td><%= @member.post_number %></td>
          </tr>
          <tr>
            <th>住所</th></th><td><%= @member.address %></td>
          </tr>
          <tr>
            <th>電話番号</th><td><%= @member.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th><td><%= @member.email %></td>
          </tr>
        </tbody>
      </table>
      <div>
      <strong>配送先</strong>
      <%= link_to addresses_path(@member), class: 'btn btn-sm btn-primary' do %>
        <span>一覧を見る</span>
      <% end %>
      </div>
      <div>
      <strong>注文履歴</strong>
      <%= link_to orders_path(@member), class: 'btn btn-sm btn-primary' do %>
        <span>一覧を見る</span>
      <% end %>
      </div>
    </div>
  </div>
</div>