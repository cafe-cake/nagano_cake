
<div class= "container">
  <div class= "row">
    <h4>注文情報確認</h4>
  </div>

  <div class= "row">
    <div class= "col-md-7">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= attachment_image_tag cart_item.item, :image, :fill, 80, 50 %> <%= cart_item.item.name %></td>
            <%#数値を3行で区切るto_s delimited%>
            <td><%= cart_item.item.add_price.to_s(:delimited) %></td>
            <td><%= cart_item.count %></td>
            <td><%= cart_item.subtotal_price.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>


    <div class= "col-md-5">
      <table>
        <tbody>
          <tr>
            <th>送料</th>
            <td>800</td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= @total_payment %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= @total_payment + 800 %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <h4>支払い方法<h4>
    <%= @order.payment_methods_i18n %>
  </div>

  <div class="row">
    <h4>お届け先</h4>
    <p>
      〒<%= @order.post_number %>
      <%= @order.address %>
      <%= @order.name %>
    </p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="">
      <%= form_with (model: Order.new, url: orders_path, local:true) do |f| %>
        <%= f.hidden_field :payment_methods, value: @order.payment_methods %>
        <%= f.hidden_field :post_number, value: @order.post_number %>
        <%= f.hidden_field :address, value: @order.address %>
        <%= f.hidden_field :name, value: @order.name %>
        <%= f.hidden_field :total_payment, value: @order.total_payment %>
        <%= f.submit "注文を確定する", class: "btn btn-sm btn-success" %>
      <% end %>
    </div>
  </div>
</div>

<%= @total = @total_payment + 800 %>
