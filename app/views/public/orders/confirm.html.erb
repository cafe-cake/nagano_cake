<% if false %>
<div class= "container">
  <div class= "row">
    <h4>注文情報確認</h4>
  </div>

  <div class= "row">
    <div class= "col-md-7">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= attachment_image_tag cart_item.item, :image, :fill, 80, 50 %> <%= cart_item.item.name %></td>
            <%#数値を3行で区切るto_s delimited%>
            <td><%= cart_item.item.add_price.to_s(:delimited) %></td>
            <td><%= cart_item.count %></td>
            <td><%= cart_item.sum_of_price.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>


    <div class= "col-md-5">
      <table>
        <tbody>
          <tr>
            <th>送料</th>
            <td>800</td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= total_payment %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= total_payment + 800 %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="row">
  <h4>支払い方法<h4>
  <%= @order.payment_methods_i18n %>
</div>

<div class="row">
  <h4>お届け先</h4>
  <p>
    <%= @order.post_number %>
    <%= @order.address %>
    <%= @order.name %>
  </p>
</div>

<div class="row">
  <%= f.submit "注文を確定する", class: "btn btn-sm btn-success" %>
</div>

<% end %>