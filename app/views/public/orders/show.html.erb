<main>
   <div class="container">
     <div class="row mt-4 mb-4">
       <h4 class="bg-light">注文履歴詳細</h4>
     </div>

     <div class="row">
       <div class="col-md-7">
        <h5>注文情報</h5>
        <table class="table table-bordered">
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              〒<%= @order.post_number %></br>
              <%= @order.address %>
              </td>
          </tr>
          <tr>
            <th>支払い方法</th>
            <td><%= @order.payment_methods_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.order_status_i18n %></td>
          </tr>
        </table>
      </div>

      <div class="col-md-5">
        <h5>請求情報</h5>
        <table class="table table-bordered">
          <tr>
            <th>商品合計</th>
            <td><%= @total_payment %>円</td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @postage %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @total_payment + @postage %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-md-10 mt-5">
        <h5>注文内容</h5>
        <table class="table table-bordered">
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
          <% @order.item_orders.each do |item_orders| %>
          <tr>
            <td><%= item_orders.item.name %></td>
            <td><%= (item_orders.item.price*1.1).to_i %></td>
            <td><%= item_orders.count %></td>
            <td>
              <% subtotal = ((item_orders.item.price*item_orders.count)*1.1).to_i %>
              <%= subtotal %>
            </td>
           <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</main>