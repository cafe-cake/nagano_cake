<main>
  <h2>注文履歴詳細</h2>
  <table>
    <tr>
      <th>注文情報</th>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td><%= @order.address %></td>
    </tr>
    <tr>
      <th>支払い方法</th>
      <td><%= @order.payment_methods %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.order_status_i18 %></td>
    </tr>
  </table>

  <table>
    <tr>
      <th>請求情報</th>
    </tr>
    <tr>
      <th>商品合計</th>
      <td><%=# .%></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @orders.%></td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td><%= @order.postage %></td>
    </tr>
  </table>
  <table>
    <th>注文内容</th>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
    <tr>
      <td><%= @item_order.item_id %></td>
      <td><%= @item_order.price %></td>
      <td><%= @item_order.count %></td>
      <td><%= Item.all.sum(:price)　%></td>
    </tr>
  </table>
</main>