<main>
  <div class="container">
     <div class="row mt-4 mb-4">
       <h4 class="bg-light">注文履歴一覧</h4>
     </div>

      <table class="table table-bordered">
        <thead class="table-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d')%></td>
            <td>
              <p>〒</p><%= order.post_number %></br>
              <%= order.address %>
              <%= order.name %>
            </td>
            <td
              <% order.item_orders.each do |item_order| %>
                <%= item_order.item.name %>
              <% end %>
            </td>
            <td><%= order.total_payment.to_s(:delimited) %></td>
            <td><%= order.order_status_i18 %></td>
            <td><%= link_to '表示する',order_path(@order) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</main>