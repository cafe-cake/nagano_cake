<div class="items_index">
  <div class="contents-title text-center">
    <div class="row">
      <div class="col-sm-3">
        <p>部分テンプレート記述欄</p>
      </div>
      <div class="col-sm-9">
         <div class="row">
          <div class="col-4">
            <%= attachment_image_tag @item, :image, size: "300x300", fallback: "no_image.jpg" %>
          </div>
          <div class="col-8">
            <div id="notice">
              <p><%= flash[:alert] %></p>
            </div>
            <p class="font-weight-bold"><%= @item.name %></p>
            <p><%= @item.introduction %></p>
            <p>
              <strong>￥<%= ((@item.price.to_i * 1.1).round).to_s(:delimited) %></strong>
              (税込)
            <p>
            <%= form_with(model:[@cart_item], url:cart_items_path(@cart_item), local:true) do |f| %>
              <%= f.hidden_field :item_id, value: @item.id %>
              <%= f.number_field :count, placeholder: "個数", min: 1, max: 20 %>
              <%= f.submit "カートに入れる", class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


