<div class="items_index">
  <div class="contents-title text-center">
    <div class="row">
      <div class="col-sm-3">
        <p>部分テンプレート記述欄</p>
      </div>
        <div class="col-sm-9">
          <h3>商品一覧(全<%= @items.count %>件)</h3>
          <div class="row">
            <% @items.each do |item| %>
              <div class="col-3">
                <%= link_to item_path(item) do %>
                  <%= attachment_image_tag item, :image, size: "250x250", fallback: "no_image.jpg" %>
                <% end %>
                <p><%= item.name %></p>
                <p>￥<%= ((item.price.to_i * 1.1).round).to_s(:delimited) %>円</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>
  <%= paginate @items %>
</div>


